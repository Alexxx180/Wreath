<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="Wreath.Controls.Tables.EditEvents">
    <Style x:Key="HoursBox" BasedOn="{StaticResource RegularBox}" TargetType="TextBox" >
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="MaxLength" Value="3"/>
        <EventSetter Event="PreviewTextInput" Handler="Hours"/>
        <EventSetter Event="DataObject.Pasting" Handler="PastingHours"/>
    </Style>

    <Style x:Key="CodeBox" BasedOn="{StaticResource RegularBox}" TargetType="TextBox">
        <Setter Property="MaxLength" Value="15"/>
    </Style>
    
    <Style x:Key="NameBox50" BasedOn="{StaticResource RegularBox}" TargetType="TextBox">
        <Setter Property="MaxLength" Value="50"/>
    </Style>

    <Style x:Key="NameBox250" BasedOn="{StaticResource RegularBox}" TargetType="TextBox">
        <Setter Property="MaxLength" Value="250"/>
    </Style>

    <Style x:Key="NameBox500" BasedOn="{StaticResource RegularBox}" TargetType="TextBox">
        <Setter Property="MaxLength" Value="500"/>
    </Style>

    <Style x:Key="NameBox1000" BasedOn="{StaticResource RegularBox}" TargetType="TextBox">
        <Setter Property="MaxLength" Value="1000"/>
    </Style>
</ResourceDictionary>